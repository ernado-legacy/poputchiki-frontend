.leftBox
  .profileBox
    .imgBox
      img(src=user.avatar_url)
      .cover
      span#change-avatar Изменить фото
    #profile-rating #{user.rating} %
  if (user.audio_url)
    .playerBox.clearfix
      .audio.audio-change-avatar
        audio
          //- source(src='/static/audio/audio.mp3', type="audio/mp3")
          //- source(src='/static/audio/audio.ogg', type="audio/ogg")
          source(src=user.audio_url)
      .timeBar
        .progress
  .searchBox
    .searchBody.clearfix#my-wishes
      h1 мои предпочтения
      .greenDots
      #search-age Возраст
      .ageBox.clearfix
        span От
        .ageFrom
          input#search-age-from(type='text',  maxlength="2", value=user.likings_age_min)
        span до
        .ageTo
          input#search-age-to(type='text',  maxlength="2", value=user.likings_age_max)
      .greenDots
      #search-sex Пол
      .sexBox.clearfix
        .manBox
          div(class =  user.likings_sex === 'male' ? 'box checked': 'box')
          span Мужчины
        .womanBox
          div(class =  user.likings_sex === 'female' ? 'box checked': 'box')
          span Женщины
      .greenDots
      span#search-places Cтраны/города
      .mainSelectElement.searchCountry.withShadow
        input.search-select(placeholder='Введите страну...', type='text',  maxlength="20", id='search-country-input', value=user.likings_country)
        .dd
        .du
        ul.droped.withShadow
          li.dl Россия
          li.dl Африка
          li.dl Европа
      .mainSelectElement.searchCity.withShadow
        input.search-select(placeholder='Введите город...', type='text',  maxlength="20", id='search-city-input', value=user.likings_city)
        .dd
        .du
        ul.droped.withShadow
          li.dl Москва
          li.dl Киев
          li.dl Минск
      //- .nearBox.clearfix
      //-   .box.checked
      //-   span Искать рядом
      .greenDots
      .nearBox.clearfix.host-search
          .house-icon - 
            .tooltip.clearfix
              .tooltip-arrow
              span В&nbsp;гости
          .host-search-description Включите иконку чтобы найти людей, которые могу принять попутчиков у себя!
          //- .house-icon
          //-   .tooltip.clearfix
          //-     .tooltip-arrow
          //-     span Домик
      .tagsBox.clearfix#tb-s

      .greenDots
      .slideDown#search-slidedown Поиски попутчиков
    .searchBody.clearfix#my-folowers
      h1 поиск попутчиков
      if user.seasons
        .greenDots
        #seasons Сезоны:
        .seasonsBox.clearfix
          div(id = "spring", class = user.seasons.indexOf("spring")>-1 ? "season seasonChecked" : "season")
              span весна
          div(id = "summer", class = user.seasons.indexOf("summer")>-1 ? "season seasonChecked" : "season")
            span лето
          div(id = "autumn", class = user.seasons.indexOf("autumn")>-1 ? "season seasonChecked" : "season")
            span осень
          div(id = "winter", class = user.seasons.indexOf("winter")>-1 ? "season seasonChecked" : "season")
            span зима
      .greenDots
      span#search-places-f Cтраны/города
      .folowersWrapper.clearfix#folowers-tags
        .mainSelectElement.searchCountry.withShadow
          input.search-select(placeholder='...', type='text',  maxlength="20", id="folowers-new-tag")
          .dd
          .du
          ul.droped.withShadow
            li.dl Россия
            li.dl Африка
            li.dl Европа
        .tagsBox.clearfix#tb-f
      .greenDots
      div(class = user.vip === true ? 'nearBox clearfix sponsor-search' : 'nearBox clearfix sponsor-search show-vip')
          .inactiveblock
          if (user.vip)
            .money-icon - 
          else
            .money-icon-inactive - 
              .tooltip.clearfix
                .tooltip-arrow
                span Спонсорство
          .sponsor-search-description Включите иконку чтобы искать только тех кто готов взять на себя расходы на путешествие
          //- .house-icon
          //-   .tooltip.clearfix
          //-     .tooltip-arrow
          //-     span Домик
      
      .greenDots
      .slideDown#search-slideup Мои предпочтения
