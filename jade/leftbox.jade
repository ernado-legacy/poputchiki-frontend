          //-   .tooltip.clearfix
          //-     .tooltip-arrow
          //-     span Домик
      .tagsBox.clearfix#tb-s

      .greenDots
      .slideDown#search-slidedown Поиски попутчиков
    .searchBody.clearfix#my-folowers
      h1 поиск попутчиков
      .greenDots
      #seasons Сезоны:
      .seasonsBox.clearfix
        div(id = "spring", class = user.seasons.indexOf("spring")>-1 ? "season seasonChecked" : "season")
            span весна
        div(id = "summer", class = user.seasons.indexOf("summer")>-1 ? "season seasonChecked" : "season")
          span лето
        div(id = "autumn", class = user.seasons.indexOf("autumn")>-1 ? "season seasonChecked" : "season")
          span осень
        div(id = "winter", class = user.seasons.indexOf("winter")>-1 ? "season seasonChecked" : "season")
          span зима
      .greenDots
      span#search-places-f Cтраны/города
      .tagsBox.clearfix#tb-f
      .folowersWrapper.clearfix#folowers-tags
        .mainSelectElement.searchCountry.withShadow
          input.search-select(placeholder='...', type='text',  maxlength="20", id="folowers-new-tag")
          .dd
          .du
          ul.droped.withShadow
            li.dl Россия
            li.dl Африка
            li.dl Европа
        .tagsBox.clearfix#tb-f
      .greenDots
      .nearBox.clearfix.sponsor-search
          .money-icon - 
            .tooltip.clearfix
              .tooltip-arrow
              span Денежка
