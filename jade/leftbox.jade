.leftBox
  .profileBox
    .imgBox
      img(src=user.avatar_url)
      .cover
      span#change-avatar Изменить фото
    #profile-rating рейтинг
  .playerBox.clearfix
    .audio.audio-change-avatar
      audio
        source(src='/static/audio/audio.mp3', type="audio/mp3")
        source(src='/static/audio/audio.ogg', type="audio/ogg")
    .timeBar
      .progress
  .searchBox
    .searchBody.clearfix#my-wishes
      h1 мои предпочтения
      .greenDots
      #search-age Возраст
      .ageBox.clearfix
        span От
        .ageFrom
          input#search-age-from(type='text',  maxlength="2", value=user.likings_age_min)
        span до
        .ageTo
          input#search-age-to(type='text',  maxlength="2", value=user.likings_age_max)
      .greenDots
      #search-sex Пол
      .sexBox.clearfix
        .manBox
          .box
          span Мужчины
        .womanBox
          .box.checked
          span Женщины
      .greenDots
      span#search-places Cтраны/города
      .mainSelectElement.searchCountry.withShadow
        input.search-select(placeholder='Страна', type='text',  maxlength="20")
        .dd
        .du
        ul.droped.withShadow
          li.dl Россия
          li.dl Африка
          li.dl Европа
      .mainSelectElement.searchCity.withShadow
        input.search-select(placeholder='Город', type='text',  maxlength="20")
        .dd
        .du
        ul.droped.withShadow
          li.dl Москва
          li.dl Киев
          li.dl Минск
      .nearBox.clearfix
        .box.checked
        span Искать рядом
      .greenDots
      .nearBox.clearfix.host-search
          .house-icon - 
            .tooltip.clearfix
              .tooltip-arrow
              span В&nbsp;гости
          .host-search-description Включите иконку чтобы найти людей, которые могу принять попутчиков у себя!
